<brls:Box
    width="auto"
    height="auto"
    axis="column"
    alignItems="center"
    justifyContent="center"
    grow="1.0">

    <brls:Label
        id="operation_text"
        fontSize="28"
        marginBottom="40"/>

    <brls:ProgressSpinner
        id="operation_spinner"
        width="100"
        height="100"
        marginBottom="40"/>

    <brls:Label
        id="progress_label"
        fontSize="20"
        marginBottom="20"
        horizontalAlign="center"/>

    <brls:Slider
        id="progressBar"
        width="600"
        height="20"
        marginBottom="20"/>

</brls:Box>
