<brls:Box
    width="auto"
    height="auto">

    <brls:ScrollingFrame
        width="auto"
        height="100%"
        axis="column"
        alignItems="stretch"
        grow="1.0" >

        <brls:Box
            width="auto"
            height="auto"
            axis="column"
            paddingTop="@style/brls/sidebar/padding_top"
            paddingRight="@style/brls/sidebar/padding_right"
            paddingBottom="@style/brls/sidebar/padding_bottom"
            paddingLeft="@style/brls/sidebar/padding_left">

            <brls:Label
                id="bootloaders_desc"
                width="auto"
                height="auto"
                fontSize="16"/>

            <brls:Rectangle
                width="auto"
                height="2"
                color="#505050"
                marginTop="20"
                marginBottom="20"/>

            <brls:Label
                id="bootloaders_title"
                width="auto"
                height="auto"
                fontSize="16"
                marginBottom="10"/>

            <!-- Bootloader items will be added here dynamically -->
            <brls:Box
                id="bootloader_list"
                width="auto"
                height="auto"
                axis="column"/>

            <brls:Rectangle
                width="auto"
                height="2"
                color="#505050"
                marginTop="20"
                marginBottom="20"/>

            <brls:Label
                id="hekate_ipl_title"
                width="auto"
                height="auto"
                fontSize="16"
                marginBottom="10"/>

            <brls:Box
                id="hekate_ipl_list"
                width="auto"
                height="auto"
                axis="column"/>

            <brls:Rectangle
                width="auto"
                height="2"
                color="#505050"
                marginTop="20"
                marginBottom="20"/>

            <brls:Label
                id="payloads_title"
                width="auto"
                height="auto"
                fontSize="16"
                marginBottom="10"/>

            <brls:Box
                id="payloads_list"
                width="auto"
                height="auto"
                axis="column"/>

        </brls:Box>

    </brls:ScrollingFrame>

</brls:Box>