<brls:Box
    width="auto"
    height="auto">

    <brls:ScrollingFrame
        width="auto"
        height="100%"
        axis="column"
        alignItems="stretch"
        grow="1.0" >

        <brls:Box
            width="auto"
            height="auto"
            axis="column"
            paddingTop="@style/about/padding_top_bottom"
            paddingBottom="@style/about/padding_top_bottom"
            paddingLeft="@style/about/padding_sides"
            paddingRight="@style/about/padding_sides" >

            <brls:Box
                width="auto"
                height="auto"
                axis="column">

                <brls:Label
                    id="app_title_label"
                    width="auto"
                    height="auto"
                    fontSize="30"
                    horizontalAlign="center"
                    text="@i18n/menu/main/app_name"/>

                <brls:Image
                    width="auto"
                    height="150"
                    image="@res/icon/icon.png"
                    cornerRadius="15"
                    marginTop="@style/about/description_margin"
                    marginBottom="@style/about/description_margin"/>

                <brls:Label
                    fontSize="15"
                    width="auto"
                    height="auto"
                    singleLine="false"
                    text="@i18n/menu/about/description"
                    horizontalAlign="center"
                    marginBottom="@style/about/description_margin"/>

                <brls:Label
                    width="auto"
                    height="auto"
                    fontSize="14"
                    singleLine="false"
                    text="@i18n/menu/about/thanks"/>
<!--
                <brls:Label
                    width="auto"
                    height="auto"
                    fontSize="14"
                    text="@i18n/menu/about/translator"
                    singleLine="false"/>
-->
            </brls:Box>

        </brls:Box>

    </brls:ScrollingFrame>

</brls:Box>