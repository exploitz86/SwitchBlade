<brls:Box
    width="auto"
    height="auto"
    axis="column">

    <brls:Label
        id="game_title"
        width="auto"
        height="auto"
        fontSize="30"
        marginTop="20"
        marginLeft="@style/brls/sidebar/padding_left"
        marginBottom="10"/>

    <brls:ScrollingFrame
        width="auto"
        height="auto"
        axis="column"
        alignItems="stretch"
        scrollingBehavior="centered"
        grow="1.0">

        <brls:Box
            id="mod_list_box"
            width="10000"
            height="auto"
            axis="column"
            alignItems="stretch"
            paddingTop="10"
            paddingRight="@style/brls/sidebar/padding_right"
            paddingBottom="@style/brls/sidebar/padding_bottom"
            paddingLeft="@style/brls/sidebar/padding_left">

        </brls:Box>

    </brls:ScrollingFrame>

</brls:Box>
